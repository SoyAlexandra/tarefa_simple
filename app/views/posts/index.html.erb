<div id="hero" class="jumbotron">
      <div class="container">

        <div class="row">
          <div class="col-sm-12">
            <h1>Problemas con las Matemáticas</h1>
            <p class="subtitle">Recibe orientación de tus problemas de matemáticas por parte de profesionales reales y totalmente gratis</p>      
          </div>
        </div>  

        <div class="row">
          <div class="hero-box col-sm-8 col-sm-offset-2">
            <%= form_for(@question, role: "search", html: {class: "form-search", id:"searchform"}) do |f| %>
              <div class="input-group">
                <%= f.text_field :content, class: "form-control input-lg", id: "autocomplete-dynamic", placeholder: "Encuentra ayuda! Escribe tu pregunta aquí." %>
                <span class="input-group-btn">
                  <% if current_user %>
                    <%= f.submit "Preguntar", :class => "btn" %>
                  <% else %>
                    <%= link_to 'Preguntar',new_user_registration_path, class: 'btn' %>
                  <% end %>
              </span>
              </div>
            <% end %>

           
          </div>   
        </div>  

      </div>
    </div><!-- /#hero -->

